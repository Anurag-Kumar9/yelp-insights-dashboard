# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documents
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.sql text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.joblib binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Git Large File Storage (LFS)
*.db filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.json filter=lfs diff=lfs merge=lfs -text

# Export ignore
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
